---
import Modal from '@components/Modal/Modal'
const content = [
{id: 1, header: "Data Certificates"},
{id: 2, header: "Backend Certificates"}
]
---
<script>
    import { $isModalOpen } from "@store/modalState"
    const btns = document.getElementsByName('hover-certificates')
    Array.from(btns).forEach(btn => {
        btn.addEventListener('click', (e) => {
        let id
        if(e.target.id === "") {
            id = e.target.parentElement.id
        } else {
            id = e.target.id
        }
        $isModalOpen.set(1)
    })
    });
</script>

<div class="rounded-md border-2 w-44 px-5 h-[230px]">
    <div>
        <div class="mt-10">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                stroke="currentColor" class="w-9 h-9 text-indigo-700">
                <path stroke-linecap="round" stroke-linejoin="round"
                    d="M20.25 6.375c0 2.278-3.694 4.125-8.25 4.125S3.75 8.653 3.75 6.375m16.5 0c0-2.278-3.694-4.125-8.25-4.125S3.75 4.097 3.75 6.375m16.5 0v11.25c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125V6.375m16.5 0v3.75m-16.5-3.75v3.75m16.5 0v3.75C20.25 16.153 16.556 18 12 18s-8.25-1.847-8.25-4.125v-3.75m16.5 0c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125" />
            </svg>
        </div>
    </div>
    <p class="text-2xl font-semibold mt-3">Data certificates</p>
    <a
    name="hover-certificates"
    id="data-cert"
    class="flex gap-2 items-center mt-5 mb-5 text-base font-semibold cursor-pointer hover:bg-base-200 p-2 rounded-md">
        <p>Read more</p>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
            class="w-5 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3" />
        </svg>
    </a>
</div>
<Modal client:load/>